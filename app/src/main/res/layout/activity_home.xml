<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.samah.itdlmainversion.HomeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ShowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



    <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/updateProfile" />

    <Button
        android:id="@+id/SignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SignOut" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show All notes"
        android:id="@+id/buttonShowAllNotes"
        android:layout_below="@+id/SignOut"
        android:layout_toRightOf="@+id/ShowText"
        android:layout_toEndOf="@+id/ShowText"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show offer recomendation"
        android:id="@+id/buttonShowOfferRecomendation"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show notifications"
        android:id="@+id/buttonShowNotifications"
        android:layout_below="@+id/buttonShowOfferRecomendation"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Note"
        android:id="@+id/buttonAddNote"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Close Offer"
        android:id="@+id/buttonShowCloseOffer"
        />
</LinearLayout>
